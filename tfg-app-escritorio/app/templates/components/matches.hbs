{{! template-lint-disable no-inline-styles }}
<div class="flex justify-center items-center mt-5 p-3">
  <label for="order" class="mx-2 border-2 border-black">
    <span class="font-semibold text-xl px-2 py-3">Selecciona un equipo:</span>
    <select
      class="p-3"
      name="team_selector"
      {{on "change" this.getMatchesByTeam}}
    >
      {{#each this.allTeams as |teamName|}}
        <option
          class="text-lg font-semibold"
          value="{{teamName}}"
        >{{teamName}}</option>
      {{/each}}
    </select>
  </label>
  <label for="order" class="mx-2 border-2 border-black">
    <span class="font-semibold text-xl px-2 py-3">Selecciona una jornada:</span>
    <select
      class="p-3"
      name="date_selector"
      {{on "change" this.getMatchesByDate}}
    >
      {{#each this.allFixtures as |jornada|}}
        <option
          class="text-lg font-semibold"
          value="{{jornada}}"
        >{{jornada}}</option>
      {{/each}}
    </select>
  </label>
</div>

<div
  class="flex flex-col items-center justify-center overflow-auto p-5 max-w-full"
>
  {{#each this.results as |match|}}
    <Match-card @match={{match}} />
  {{/each}}

</div>